<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game">

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pink.game.core.library.CustomImageButton
            android:id="@+id/buttonEasy"
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:src="@drawable/button_easy" />

        <com.pink.game.core.library.CustomImageButton
            android:id="@+id/buttonNormal"
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/button_normal" />

        <com.pink.game.core.library.CustomImageButton
            android:id="@+id/buttonHard"
            android:layout_width="260dp"
            android:layout_height="75dp"

            android:src="@drawable/button_hard" />

        <com.pink.game.core.library.CustomImageButton
            android:id="@+id/buttonHarder"
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/button_harder" />

        <com.pink.game.core.library.CustomImageButton
            android:id="@+id/buttonClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/button_close"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>